<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliders"
        android:layout_width="match_parent"
        android:layout_height="237dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="1" />
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_weight="1"
                android:id="@+id/community"
                android:background="@color/orange"
                android:elevation="5dp"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#ff8c00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:background="#ff8c00"
                        android:id="@+id/animationView"
                        android:layout_width="match_parent"
                        android:layout_height="153dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/community" />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:background="#ff8c00"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Community" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:id="@+id/seekhelp"
                android:background="#ff8c00"
                android:elevation="5dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#ff8c00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:background="#ff8c00"
                        android:id="@+id/animationViewTwo"
                        android:layout_width="match_parent"
                        android:layout_height="153dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/seekhelp" />

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:background="#ff8c00"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Seek Help" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:id="@+id/csuggetions"
            android:background="@color/orange"
            android:elevation="5dp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:background="#ff8c00"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/sugettions" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:background="@color/orange"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Suggetions" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            android:id="@+id/reidter"
            android:background="@color/orange"
            android:elevation="5dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/resister" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:background="@color/orange"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Register" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
        </LinearLayout>
<TextView
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:text="Our Top Donators Of the month"
    android:textSize="18sp"
    android:textColor="@color/black"
    android:layout_height="wrap_content"/>
        <HorizontalScrollView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            android:id="@+id/ivTopDonator1"
            android:background="@color/orange"
            android:elevation="5dp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/sugettions" />

                <TextView
                    android:layout_margin="10dp"
                    android:background="@color/orange"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mr.Lloyd Decosta" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardElevation="5dp"
                android:id="@+id/ivTopDonator2"
                android:background="@color/orange"
                android:elevation="5dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="197dp"
                    android:background="@color/orange"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="153dp"
                        android:background="@color/orange"                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/sugettions" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/orange"                       android:text="Mr.Shivraj Patil"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardElevation="5dp"
                android:id="@+id/ivTopDonator3"
                android:background="@color/orange"               android:elevation="5dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/orange"                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:background="@color/orange"                      android:layout_width="match_parent"
                        android:layout_height="153dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/sugettions" />

                    <TextView
                        android:layout_margin="10dp"
                        android:background="@color/orange"                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Mr.Nrupul Dev" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

