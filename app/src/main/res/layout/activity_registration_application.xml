<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".RegestrationFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/regTooll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff8c00">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textAlignment="center"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvNameof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Name of NGO *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:autofillHints="name"
                android:textColor="@color/black"
                android:id="@+id/etNameof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Name of NGO" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Year of establishing *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:textColor="@color/black"
                android:id="@+id/etstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Year" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvaddof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Address *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:autofillHints="postalAddress"
                android:textColor="@color/black"
                android:id="@+id/etaddof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Address of organization " />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvcityof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Aadhar Card Number *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:textColor="@color/black"
                android:id="@+id/etcityof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Aadhar Card Number" />

            <TextView
                android:textColorHint="#757575"
                android:textColor="@color/black"
                android:id="@+id/tvStateof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Driving License *"
                android:textSize="18sp" />

            <EditText
                android:textColor="@color/black"
                android:id="@+id/etStateof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Driving License." />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvPhoneof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Contact No *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:autofillHints="phone"
                android:textColor="@color/black"
                android:id="@+id/etPhoneof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Contact No" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvEmailof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Passport *"
                android:textSize="18sp" />

            <EditText
                android:textColorHint="#757575"
                android:autofillHints="emailAddress"
                android:textColor="@color/black"
                android:id="@+id/etEmailof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Passport Id *" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvvoter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Voter ID *"
                android:textSize="18sp" />
            <EditText
                android:textColorHint="#757575"
                android:autofillHints="emailAddress"
                android:textColor="@color/black"
                android:id="@+id/evvoter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Voter ID *" />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tvbill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Upload A bill of water or electricity stating \n the address that is required to be registered *"
                android:textSize="18sp" />
<!--            <ImageView-->
<!--                android:id="@+id/ivbill"-->
<!--                android:layout_width="57dp"-->
<!--                android:layout_height="44dp"-->
<!--                android:layout_margin="10dp"-->
<!--                android:src="@drawable/ic_baseline_image_search_24" />-->
            <Button
                android:background="#ff8c00"
                android:id="@+id/btnreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Register" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>